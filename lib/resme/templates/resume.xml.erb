                 </Documentation>
            -->
            <Position>
              <Label><%= pos["role"] %></Label>
            </Position>
            <Activities>
              <%= pos["summary"] %>
            </Activities>
            <Employer>
              <Name><%= pos["who"] %></Name>
              <% if pos["address"] %>
                <ContactInfo>
                  <Address>
